<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Hàng đầu tiên: Doanh thu & Chi tiêu -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnAddIncome"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:text="Thêm\nDoanh Thu"
            android:textColor="@android:color/white"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:background="@drawable/button_add_income" />

        <Button
            android:id="@+id/btnAddExpense"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:text="Thêm\nChi Tiêu"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/button_add_expense" />
    </LinearLayout>

    <!-- Hàng thứ hai: Thống kê & Hạn mức -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnStatistics"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:text="Thống Kê"
            android:textColor="@android:color/white"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:background="@drawable/button_statistics" />

        <Button
            android:id="@+id/btnLimit"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:text="Hạn mức\nbáo động"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/button_limit_alert" />
    </LinearLayout>

    <!-- Biểu đồ -->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/chart_bar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="24dp" />
</LinearLayout>