<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/statisticsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.StatisticsActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thống kê chi tiêu"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/textTotalIncome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng thu nhập: 0 VNĐ"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/textTotalExpense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng chi tiêu: 0 VNĐ"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/textBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số dư: 0 VNĐ"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

</LinearLayout>
